                                    {% render 'icon-discount' %}
                                    <span>{{ discount_allocation.discount_application.title }}</span>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            {%- endif -%}
                            <div>
                              <div class="price font-body-bolder{% if item.original_price != item.final_price or item.properties._is_bundle %} price--on-sale{% endif %}">
